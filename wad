def findHorizontally(puzzle,word):

    for i in range(len(puzzle[0])):
        k=('').join(puzzle[i])
        a = {"row":i,"column":k.find(word),"direction":DIR_R}
        b = {"row":i,"column":len(k)-k[::-1].find(word)-1,"direction":DIR_L}
        
        if k.find(word) != -1 :
            return a
        elif k[::-1].find(word)!=-1:
            return b
    return None
